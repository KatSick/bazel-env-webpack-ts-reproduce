{
  "include": ["./src"],
  "compilerOptions": {
    "module": "ES2020",
    "sourceMap": true,
    "moduleResolution": "node",
    "baseUrl": "./src",
    "strict": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "jsx": "react",
    "esModuleInterop": true,
    "allowJs": true,
    "noUnusedLocals": true,
    "lib": ["DOM", "ES2020"]
  }
}
